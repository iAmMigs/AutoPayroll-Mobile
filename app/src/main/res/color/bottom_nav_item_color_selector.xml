<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color when item is selected -->
    <item android:state_checked="true" android:color="@color/yellow_buttons" /> <!-- Or your specific selected color, e.g., @color/your_selected_color -->

    <!-- Color when item is NOT selected (default state) - THIS IS WHAT YOU WANT TO BE WHITE -->
        <item android:state_checked="false" android:color="@color/white" />

    <!-- You can add other states if needed, e.g., disabled, focused -->
    <!-- <item android:state_enabled="false" android:color="@color/grey_disabled" /> -->
</selector>