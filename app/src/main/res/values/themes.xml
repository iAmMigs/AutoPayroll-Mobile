<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AutoPayrollMobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_buttons</item>
        <item name="colorPrimaryVariant">@color/deep_indigo_bottom_nav</item> <!-- Status bar can be dark -->
        <item name="colorOnPrimary">@color/text_primary</item> <!-- Dark text on yellow buttons -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/active</item>
        <item name="colorSecondaryVariant">@color/active</item> <!-- Or a darker shade of active if you had one -->
        <item name="colorOnSecondary">@color/background</item> <!-- Light text (#FDFCF9) on active green -->

        <!-- Background and surface colors for Light Theme -->
        <item name="android:colorBackground">@color/background</item>     <!-- #FDFCF9 -->
        <item name="colorSurface">@color/card_surface</item>           <!-- #F6F5F2 -->

        <!-- Text/icon colors on top of background/surface for Light Theme -->
        <item name="colorOnBackground">@color/text_primary</item>       <!-- #1F2937 on #FDFCF9 -->
        <item name="colorOnSurface">@color/text_primary</item>        <!-- #1F2937 on #F6F5F2 -->

        <!-- Error color -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/background</item>             <!-- #FDFCF9 on red -->

        <!-- Status bar color for Light Theme. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- For light status bar icons on light backgrounds (if status bar is light): -->
        <!-- <item name="android:windowLightStatusBar" tools:targetApi="m">true</item> -->

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/muted_color_text</item>

        <!-- Default button style -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/yellow_buttons</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="rippleColor">@color/card_inner_surface</item> <!-- Subtle ripple -->
    </style>

    <style name="OtpBoxStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/otp_box_background</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1F2937</item>
    </style>

    <style name="CalendarDate">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="CalendarDate.Muted">
        <item name="android:textColor">#AAAAAA</item>
    </style>
    <style name="CalendarDate.Highlight">
        <item name="android:textColor">#2196F3</item>
    </style>

    <style name="ActionCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">#F5F5F5</item>
    </style>

    <style name="ActionCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ActionCardIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="ActionCardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>